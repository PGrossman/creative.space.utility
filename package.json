{
  "name": "creative.space.utility",
  "version": "0.1.0",
  "description": "A robust Electron desktop application for storage professionals, featuring pure-function calculators for storage capacity, performance, streaming, and pricing without external data dependencies.",
  "author": "PGrossman",
  "main": "dist-electron/main/main.js",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -n BUILD,RENDERER,APP \"npm run dev:build:electron\" \"cross-env VITE_DEV_SERVER=true vite\" \"npm run dev:electron\"",
    "dev:build:electron": "tsc -p tsconfig.electron.json -w",
    "dev:electron": "wait-on tcp:5173 && electron .",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:app": "vite build && npm run build:electron",
    "preview": "npm run build:app && electron .",
    "pack:installer": "npm run build:app && electron-builder",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:ui": "vitest",
    "clean": "rimraf dist dist-electron release"
  },
  "build": {
    "appId": "com.pg.creativespace.utility",
    "productName": "creative.space.utility",
    "icon": "datasources/cs-utility.icns",
    "files": [
      "dist/**",
      "dist-electron/**",
      "src/shared/**",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vite": "^7.1.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^34.0.0",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.2.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "jsdom": "^25.0.1",
    "postcss": "^8.4.38",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.1"
  }
}
