{
  "name": "creative.space.utility",
  "version": "0.1.0",
  "main": "dist-electron/main/main.js",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -n MAIN,RENDERER \"cross-env VITE_DEV_SERVER=true vite\" \"cross-env VITE_DEV_SERVER=true npm:dev:electron\"",
    "dev:electron": "wait-on tcp:5173 && electron .",
    "build": "vite build && tsc -p tsconfig.json && electron-builder",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:ui": "vitest"
  },
  "build": {
    "appId": "com.pg.creativespace.utility",
    "productName": "creative.space.utility",
    "files": [
      "dist/**",
      "dist-electron/**",
      "src/shared/**",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  },
  "dependencies": {
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "electron-store": "^10.1.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.4",
    "zod": "^4.1.5"
  }
}
