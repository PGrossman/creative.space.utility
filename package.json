{
  "name": "creative.space.utility",
  "version": "0.1.0",
  "description": "A robust Electron desktop application for creative professionals, featuring calculators and lookup tables for media production workflows.",
  "author": "PGrossman",
  "main": "dist-electron/main/main.js",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -n MAIN,RENDERER \"cross-env VITE_DEV_SERVER=true vite\" \"cross-env VITE_DEV_SERVER=true npm run dev:electron\"",
    "dev:electron": "wait-on tcp:5173 && electron .",
    "build": "vite build && npm run build:electron && electron-builder",
    "build:electron": "tsc -p tsconfig.electron.json",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:ui": "vitest"
  },
  "build": {
    "appId": "com.pg.creativespace.utility",
    "productName": "creative.space.utility",
    "files": [
      "dist/**",
      "dist-electron/**",
      "src/shared/**",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "mac": { "category": "public.app-category.utilities", "target": ["dmg"] },
    "win": { "target": ["nsis"] },
    "linux": { "target": ["AppImage"] }
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vite": "^7.1.3",
    "@vitejs/plugin-react": "^4.3.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "electron": "^34.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.2.0",
    "typescript": "^5.7.2",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "eslint": "^9.17.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.4.2",
    "electron-builder": "^26.0.12",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "vitest": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "jsdom": "^25.0.1",
    "tailwindcss": "^3.4.17",
    "postcss": "^8.4.38",
    "autoprefixer": "^10.4.20",
    "@tailwindcss/postcss": "^0.0.1",
    "wait-on": "^8.0.1"
  }
}
